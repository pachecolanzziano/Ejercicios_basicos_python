#:kivy 2.1.0
<CalculadoraScreen>:
    id: calculadora
    mi_display: resultado
    
    FloatLayout:
        pos: 0, 0
        size: root.width, root.height

        TextInput:
            id:resultado
            pos_hint: {'x':root.x, 'y': .8}
            size_hint: 1, .2
            multiline:False
            font_size:"42dp"
            text:''
            multiline: False

        GridLayout:
            cols: 4
            pos_hint: {'x':root.x, 'y': root.y}
            size_hint: 1, .8
            size: root.width*.4, root.height*.4 #tama√±o de los botones
            spacing: "2dp"
            padding: "5dp"

            Button:
                text: 'CE'
                on_press: resultado.text = ""
            Button:
                text: '%'
                on_press: resultado.text += self.text
            Button:
                text: '<--'
                on_press: resultado.text += ""
            Button:
                text: '/'
                on_press: resultado.text += self.text
            Button:
                text: '7'
                on_press: resultado.text += self.text
                background_color:(1,1,1,1)
            Button:
                text: '8'
                on_press: resultado.text += self.text
                background_color:(1,1,1,1)
            Button:
                text: '9'
                on_press: resultado.text += self.text
                background_color:(1,1,1,1)
            Button:
                text: '*'
                on_press: resultado.text += self.text
            Button:
                text: '4'
                on_press: resultado.text += self.text
                background_color:(1,1,1,1)
            Button:
                text: '5'
                on_press: resultado.text += self.text
                background_color:(1,1,1,1)
            Button:
                text: '6'
                on_press: resultado.text += self.text
                background_color:(1,1,1,1)
            Button:
                text: '-'
                on_press: resultado.text += self.text
            Button:
                text: '1'
                on_press: resultado.text += self.text
                background_color:(1,1,1,1)
            Button:
                text: '2'
                on_press: resultado.text += self.text
                background_color:(1,1,1,1)
            Button:
                text: '3'
                on_press: resultado.text += self.text
                background_color:(1,1,1,1)
            Button:
                text: '+'
                on_press: resultado.text += self.text
            Button:
                text: '+/-'
                on_press: resultado.text += self.text
            Button:
                text: '0'
                on_press: resultado.text += self.text
                background_color:(1,1,1,1)
            Button:
                text: ','
                on_press: resultado.text += self.text
            Button:
                text: '='
                on_press: calculadora.calculate(resultado.text)